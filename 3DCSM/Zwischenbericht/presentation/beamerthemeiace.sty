\newcommand*{\shifttext}[2]{%
  \settowidth{\@tempdima}{#2}%
  \makebox[\@tempdima]{\hspace*{#1}#2}%
}

\newcommand{\headerbox}[1]{\setlength{\unitlength}{1cm}\colorbox{umitblau}{\makebox(#1){}}}

\newcommand\varRa{0.38}
\newcommand\varA{0.4}
\newcommand\varH{0.42}
\newcommand\varOff{0.0}

\newcommand{\leftbox}{
\begin{tikzpicture}
    \draw[fill=umitblau, color=umitblau] (0, -\varOff) -- (0.7, -\varOff) -- (0.7, \varH-\varOff) -- (0, \varH-\varOff);
\end{tikzpicture}
}

\newcommand{\midbox}{
\begin{tikzpicture}
    \draw[fill=umitblau, color=umitblau] (0, -\varOff) -- (7.7, -\varOff) -- (7.7, \varH-\varOff)  -- (0, \varH-\varOff);
    \node[anchor=west] at (0.2,0.21) {\usebeamerfont{frametitle}\textcolor{titletext}{\vphantom{$\varphi_2^{1}$}\rlap\insertframetitle}};
\end{tikzpicture}
}

\newcommand{\rightbox}{
\begin{tikzpicture}
    \draw[fill=umitblau, color=umitblau] (0, -\varOff) rectangle (1.15, \varH-\varOff);
\end{tikzpicture}
}

